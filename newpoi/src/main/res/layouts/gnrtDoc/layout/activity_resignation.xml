<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".gnrtDoc.EmploymentContractActivity">
    <com.amar.library.ui.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:stickyHeader="@+id/headerLayout"
        app:stickyFooter="@+id/RelativeLayout_btns">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_main0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />
                <ImageView
                    android:id="@+id/image_main1"
                    android:layout_below="@+id/image_main0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />
                <ImageView
                    android:id="@+id/image_main2"
                    android:layout_below="@+id/image_main1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout_btns"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/layout_border"
                android:layout_below="@+id/main_layout">
                <TextView
                    android:id="@+id/Text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:text="@string/title"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="#34495e" />
                <EditText
                    android:id="@+id/editText_title"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="10dp"
                    android:hint="@string/fileTitle"
                    android:layout_toRightOf="@id/Text_title"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="#34495e"
                    android:singleLine="true"/>
                <android.widget.Button
                    android:id="@+id/btn_download"
                    android:layout_width="78dp"
                    android:layout_height="52dp"
                    android:layout_toRightOf="@id/editText_title"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/save_only_template"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_maintheme" />
                <android.widget.Button
                    android:id="@+id/btn_create"
                    android:layout_width="78dp"
                    android:layout_height="52dp"
                    android:layout_toRightOf="@+id/btn_download"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/create"
                    android:background="@drawable/btn_maintheme"
                    android:textColor="@color/white"/>
                <ImageButton
                    android:id="@+id/imageBtn_more"
                    android:layout_width="34dp"
                    android:layout_height="52dp"
                    android:layout_toRightOf="@+id/btn_create"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/themeColor"
                    android:src="@drawable/ic_baseline_more_vert_24" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/LinearLayout_aP_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_below="@+id/RelativeLayout_btns"
                android:background="@drawable/layout_border"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:background="@drawable/linearlayout_title">
                    <TextView
                        android:id="@+id/Text_aP_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="30dp"
                        android:text="@string/aP_details"
                        android:textSize="25sp"
                        android:gravity="start"
                        android:layout_weight="5"/>
                    <TextView
                        android:id="@+id/Text_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="1/3"
                        android:textSize="25sp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_dB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dB"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_dB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/addr"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_pN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phoneNum"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_pN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout_ap_iH_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_below="@+id/LinearLayout_aP_details"
                android:background="@drawable/layout_border"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/linearlayout_title"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <TextView
                        android:id="@+id/Text_aP_iH_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/aP_iH_details"
                        android:textSize="25sp"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="2/3"
                        android:textSize="25sp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_rK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/rK"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_rK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_dT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dT"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_dT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_rFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/rFR"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_rFR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_below="@+id/LinearLayout_ap_iH_details"
                android:background="@drawable/layout_border"
                >
                <LinearLayout
                    android:id="@+id/LinearLayout_dates_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:background="@drawable/linearlayout_title">
                    <TextView
                        android:id="@+id/Text_dates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="25dp"
                        android:text="@string/date"
                        android:textSize="25sp"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="3/3"
                        android:textSize="25sp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLayout_jD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:weightSum="8">
                    <ImageView
                        android:id="@+id/Image_jD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_calendar_today_24"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayout_jD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/jD"
                        app:hintTextColor="@color/themeColor"
                        app:boxStrokeColor="@color/themeColor"
                        android:layout_weight="6">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextInputEditText_jD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_border"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="textStart"
                        android:paddingTop="10sp"
                        android:textSize="25sp"
                        android:text="@string/from"
                        android:layout_weight="2"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLayout_dD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:weightSum="8">
                    <ImageView
                        android:id="@+id/Image_dD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_calendar_today_24"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayout_dD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dD"
                        app:hintTextColor="@color/themeColor"
                        app:boxStrokeColor="@color/themeColor"
                        android:layout_weight="6">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextInputEditText_dD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_border"
                            android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="textStart"
                        android:paddingTop="10sp"
                        android:textSize="25sp"
                        android:text="@string/to"
                        android:layout_weight="2"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout_tD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:weightSum="8">
                <ImageView
                    android:id="@+id/Image_tD"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_calendar_today_24"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TextInputLayout_tD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/tD"
                    app:hintTextColor="@color/themeColor"
                    app:boxStrokeColor="@color/themeColor"
                    android:layout_weight="6">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextInputEditText_tD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="@drawable/btn_back"/>
            </RelativeLayout>
        </RelativeLayout>

    </com.amar.library.ui.StickyScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>