<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeColor">

    <com.amar.library.ui.StickyScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:stickyHeader="@+id/headerLayout"
        app:stickyFooter="@+id/buttonLayout">
            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/expanded_screen_mainImageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/buttonLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_border"
                        android:layout_below="@+id/main_layout">
                        <TextView
                            android:id="@+id/expanded_screen_file"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginVertical="10dp"
                            android:text="@string/title"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textColor="#34495e" />
                        <EditText
                            android:id="@+id/expanded_screen_name"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_marginVertical="10dp"
                            android:hint="@string/fileTitle"
                            android:layout_toRightOf="@id/expanded_screen_file"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textColor="#34495e" />
                        <android.widget.Button
                            android:id="@+id/expanded_screen_download_without_modify"
                            android:layout_width="78dp"
                            android:layout_height="52dp"
                            android:layout_toRightOf="@id/expanded_screen_name"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:text="@string/save_only_template"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_maintheme" />
                        <android.widget.Button
                            android:id="@+id/expanded_screen_create"
                            android:layout_width="78dp"
                            android:layout_height="52dp"
                            android:layout_toRightOf="@+id/expanded_screen_download_without_modify"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:text="생성"
                            android:background="@drawable/btn_maintheme"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/creditor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@id/buttonLayout"
                        android:background="@drawable/layout_border"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="3"
                            >
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="채권자성명"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText0"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:textColor="@color/red"
                                    android:singleLine="true"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="채권자주소"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:singleLine="true"
                                    android:textColor="@color/red"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="주민등록번호"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:singleLine="true"
                                    android:textColor="@color/red"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/debtor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/creditor"
                    android:background="@drawable/layout_border"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="채무자성명"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="채무자주소"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="주민등록번호"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/joint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/debtor"
                    android:background="@drawable/layout_border">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="연대보증인 성명"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="연대보증인 주소"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="연대보증인 주민등록번호"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/content"
                    android:layout_below="@+id/joint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:layout_marginTop="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="5"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="원금(삼백만원)"
                            app:suffixText="원"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="원정(3,000,000)"
                            app:suffixText="₩"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="이자"
                            app:suffixText="%"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="이자 지급일"
                            app:suffixText="일"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="원금 변제일(YYYY년 MM월 DD일)"
                            app:hintTextColor="@color/themeColor"
                            app:boxStrokeColor="@color/themeColor"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_border"
                                android:singleLine="true"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/date"
                    android:layout_below="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/layout_border">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="YYYY"
                                app:suffixText="년"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText15"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:singleLine="true"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="MM"
                                app:suffixText="월"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText16"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:singleLine="true"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_input_layout17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="DD"
                                app:suffixText="일"
                                app:hintTextColor="@color/themeColor"
                                app:boxStrokeColor="@color/themeColor"
                                android:layout_weight="1">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText17"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_border"
                                    android:singleLine="true"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/headerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <ImageButton
                            android:id="@+id/expanded_screen_backButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="18dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            android:background="@drawable/btn_back"/>
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>
    </com.amar.library.ui.StickyScrollView>

</RelativeLayout>