<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@drawable/btn_back"/>
        <android.widget.Button
            android:id="@+id/cmpltBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:background="@drawable/radius"/>
        <TextView
            android:id="@+id/emailTtl"
            android:layout_below="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/email"
            />
        <TextView
            android:id="@+id/emailCntnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/emailTtl"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/pswdTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/emailCntnt"
            android:text="@string/password"
            />
        <TextView
            android:id="@+id/pswdCntnt"
            android:layout_below="@+id/pswdTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signOutBtn"/>
        <android.widget.Button
            android:id="@+id/signOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:layout_margin="12dp"
            android:padding="0dp"
            android:layout_alignParentBottom="true"
            android:elevation="0dp"
            android:background="@drawable/radius"
            android:textColor="@color/white"/>
    </RelativeLayout>